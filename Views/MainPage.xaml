<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EscritoresApp.Views.MainPage"
             Title="">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Margin="0,10,0,10"
                FontAttributes="Bold"
                FontSize="Title"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="Aplicacion Escritores" />

            <Button
                x:Name="btnAgregar"
                Margin="0,0,0,10"
                Clicked="btnAgregar_Clicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Nuevo Autor"
                Text="Agregar Autor" />

            <Button
                x:Name="btnVerAutores"
                Margin="0,0,0,100"
                Clicked="btnVerAutores_Clicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Lista de Autores"
                Text="Ver Autores" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>